        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Name="StartBtn" Margin="90,219,0,0" VerticalAlignment="Top" Width="75" Click="StartBtn_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Name="StopBtn" Margin="211,219,0,0" VerticalAlignment="Top" Width="75" Click="StopBtn_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Name="ClearBtn" Margin="330,219,0,0" VerticalAlignment="Top" Width="75" Click="ClearBtn_Click"/>
        <TextBox x:Name="textBoxTimer" HorizontalAlignment="Left" Height="23" Margin="156,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="16" FontWeight="Bold" FontFamily="Times New Roman" TextAlignment="Center"/>

    </Grid>
